{
    // IntelliSense를 사용하여 가능한 특성에 대해 알아보세요.
    // 기존 특성에 대한 설명을 보려면 가리킵니다.
    // 자세한 내용을 보려면 https://go.microsoft.com/fwlink/?linkid=830387을(를) 방문하세요.
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: uvicorn",
            "module": "uvicorn",
            "type": "python",
            "request": "launch",
            "args": [
                "webapp:app",
                "--reload",
                "--port",
                "8888"
            ],
            "env": {
                "usersecret": "some$Ecret",
            }
        },
        {
            "name": "Python: Current File",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "justMyCode": false,
        },
        // {
        //     "name": "Debug Unit Test",
        //     "type": "python",
        //     "request": "test",
        //     "console": "integratedTerminal",
        //     "justMyCode": false,
        // }
        // This configuration can only be used by the test debugging commands.
        // `"request": "test"` is deprecated, please keep as `"request": "launch"`
        // and add `"purpose": ["debug-test"]` instead.
        {
            "name": "Debug Tests",
            "type": "python",
            "request": "launch",
            "purpose": [
                "debug-test"
            ],
            "program": "${file}",
            "console": "integratedTerminal",
            "justMyCode": false,
            "cwd": "${workspaceFolder}",
            "env": {
                "_PYTEST_RAISE": "1",
                "PYTHONPATH": "${workspaceFolder}"
            },
        },
        {
            "name": "Python: Current File (Workspace)",
            "type": "python",
            "request": "launch",
            // "cwd": "${workspaceFolder}\\app\\js", // set directory here
            // "program": "${workspaceFolder}\\app\\js\\server.js", // set start js here
            "cwd": "${workspaceFolder}",
            "program": "${file}",
            "console": "integratedTerminal",
            "justMyCode": true,
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            }
        },
        {
            "name": "Python: Current File (Integrated Terminal)",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal"
        },
        {
            "name": "Python: Current File (External Terminal)",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "externalTerminal"
        },
        {
            "name": "Python: Attach using Process Id",
            "type": "python",
            "request": "attach",
            "processId": "${command:pickProcess}",
            "justMyCode": true
        },
        {
            "name": "Python: Module",
            "type": "python",
            "request": "launch",
            "module": "enter-your-module-name",
            "justMyCode": true
        },
        {
            "name": "Python: startup.py",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/startup.py",
            "args": [
                "--port",
                "1593"
            ]
        }
    ]
}